<div class="col-md-3">

  <h2>User info</h2>

  <% if (params[:id] == nil) || (params[:id].to_i == current_user.id) %>
  <!--idなしurlとcurrent_userの場合はブロック変数current_userを入れる-->
    <%= attachment_image_tag current_user, :profile_image, :fill, 100, 100, format: 'jpg' 'png', fallback: "no_image.jpg", size:'100x100' %>
    <table class="table">
      <tbody>
        <tr>
          <th>name</th>
          <th><%= current_user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= current_user.introduction %></th>
        </tr>
      </tbody>
    </table>
    <div class="row">
      <%= link_to "", edit_user_path(user.id), class:'btn btn-outline-secondary btn-block fas fa-user-cog' %>

    </div>

  <% else %>
  <!--それ以外の場合は、urlからidを取得して（users_controllerは基本的に@user = User.find(params[:id])のため問題なし）他人のUserinfoを表示-->
    <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpg' 'png', fallback: "no_image.jpg", size:'100x100' %>
    <table class="table">
      <tbody>
        <tr>
          <th>name</th>
          <th><%= user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= user.introduction %></th>
        </tr>
      </tbody>
    </table>
    <div class="row">
      <%= link_to "", user_path(current_user.id), class:'btn btn-outline-secondary btn-block fas fa-user-cog' %>

    </div>

  <% end %>


  <h2 class="mt-3">New book</h2>
  <%= form_with model:Book.new, url: '/books', local: true do |f| %>
    <div class="form-group">
      <label for="book_title">Title</label>
      <%= f.text_field :title, class:'form-control book_title' %>
    </div>
    <div class="form-group">
      <label for="book_opinion">Opinion</label>
      <%= f.text_area :body, class:'form-control book_body' %>
    </div>
    <div class="form-group">
      <%= f.submit 'Create Book', class:'btn btn-success' %>
    </div>
  <% end %>

</div>