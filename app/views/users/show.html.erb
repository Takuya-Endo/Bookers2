<h1>User info</h1>

<%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpg' 'png', fallback: "no_image.jpg" %>

<p>name</p>
<p><%= @user.name %></p>
<p>introduction</p>
<p><%= @user.introduction %></p>
<%= link_to "記号（歯車）", edit_user_path(@user.id) %>

<h1>New book</h1>
<%= form_with model: @book, url: '/books', local: true do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>
  <p>Opinion</p>
  <%= f.text_field :body %>
  <%= f.submit 'Create Book' %>
<% end %>

<h1>Books</h1>
<% @books.each do |book| %>
  <div>
    <%= attachment_image_tag @user , :profile_image, :fill, 60, 60, format: 'jpg' 'png', fallback: "no_image.jpg" %>
    <%= link_to book.title, book_path(book.id) %>
    <%= book.body %>
  </div>
<% end %>